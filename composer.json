{
    "name": "tgu/aksenov",
    "autoload": {
        "psr-4": {
            "Tgu\\Aksenov\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tgu\\Aksenov\\Blog\\UnitTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "aksenov",
            "email": "k.a.aksenov@utmn.ru"
        }
    ],
    "scripts": {
        "test": "phpunit tests --testdox --colors",
        "test:coverage": "php -dxdebug.mode=coverage vendor/bin/phpunit tests --coverage-html coverage_report --coverage-filter src"
    },
    "require": {
        "symfony/polyfill-uuid": "^1.28",
        "ext-pdo": "*",
        "php": "^8.2",
        "symfony/http-foundation": "^6.3",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "10"
    }
}
